@page
@model LojaVirtual.ShoppingCartModel
@{
    ViewData["Title"] = "ShoppingCart";
}

@{
    if (Model.ShoppingCart == null || Model.ShoppingCart.ProductOrders == null)
    {
        
        @await Html.PartialAsync("Shared/_EmptyShoppingCart", new _EmptyShoppingCartModel(), null);
    }
    else
    {
        if (Model.ShoppingCart.ProductOrders.Count == 0)
        {
            @await Html.PartialAsync("Shared/_EmptyShoppingCart", new _EmptyShoppingCartModel(), null);

        }

        @await Html.PartialAsync("Shared/_ShoppingCartContent", new _ShoppingCartContentModel(Model.ShoppingCart.ProductOrders), null);
        
    }
}




