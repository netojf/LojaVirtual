<!-- #region Carousel -->
        <div class="container h-25">
            <div id="carouselExampleIndicators" class="carousel slide row m-1" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class=""></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2" class=""></li>
                </ol>

                <!-- #region CarouselItem -->
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item">
                        <img class="d-block img-fluid " style="width: 100%; height: auto" src="http://placehold.it/1200x350" alt="First slide">
                    </div>
                    <div class="carousel-item active">
                        <img class="d-block img-fluid " style="width: 100%; height: auto" src="http://placehold.it/1200x350" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid " style="width: 100%; height: auto" src="http://placehold.it/1200x350" alt="Third slide">
                    </div>
                </div>
                <!-- #endregion -->
                <!-- #region Controles -->
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>

                <!-- #endregion -->
            </div>
        </div>

<!-- #endregion -->
