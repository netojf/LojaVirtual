
<!DOCTYPE html>
@await Html.PartialAsync("~/Pages/Management/Shared/_ManagerLayout.cshtml", new Pages.Management.Shared._ManagerLayoutModel(), null)
<html>

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - LojaVirtual</title>
  <link rel="stylesheet" href="~/twitter-bootstrap/css/bootstrap.css" />
  <link rel="stylesheet" href="~/font-awesome/css/all.css" />
  <link rel="stylesheet" href="~/css/site.css" />
  <base href="~/" />
</head>

<body>
  <header>

    @await Html.PartialAsync("_NavBar", new _NavBarModel(), ViewData)

  </header>
  <div class="container-fluid px-0">
    <div class="row no-gutters min-vh-100">
      <div class="col-sm-3 bg-dark flex-grow-1" id="sidebar">
        <div class="py-2 sticky-top flex-grow-1">
          <div class="nav flex-sm-column flex-no-wrap align-items-center align-items-sm-start pt-2">
            <a asp-page="/Management/ManagementIndex" class="text-white nav-link h2">Administrativo</a>
            <a asp-page="/Product/Index" class="text-white nav-link">Produtos</a>
            <a asp-page="/Category/Index" class="text-white nav-link">Categorias</a>
          </div>
        </div>
      </div>
      <div class="col p-4" id="main">
        @RenderBody()
      </div>
    </div>
  </div>

  <script src="~/jquery/jquery.js"></script>
  <script src="~/popper.js/umd/popper.js"></script>
  <script src="~/font-awesome/js/all.js"></script>
  <script src="~/twitter-bootstrap/js/bootstrap.js"></script>
  <script src="_framework/blazor.server.js"></script>
  <script src="_content/BlazorInputFile/inputfile.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>

