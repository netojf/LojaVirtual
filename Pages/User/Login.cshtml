@page "{handler?}"
@model LojaVirtual.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-8">
        <section>
            <form method="post" role="form" class="form-horizontal">
                @Html.AntiForgeryToken()

                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.tempUser.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.tempUser.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.tempUser.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.tempUser.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.tempUser.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.tempUser.Password, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @* todo: Localização *@
                        <button asp-page-handler="LogIn" class="btn btn-primary">Acessar</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>
