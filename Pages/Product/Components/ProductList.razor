@inherits ProductListBase


@if (CurrentItems != null)
{
  <div class="row m-2">
    @for (int i = 0; i < CurrentItems.Count; i++)
    {
      var product = CurrentItems[i];

      if (product != null)
      {
        <ProductCard @bind-Product="@product"></ProductCard>
      }
    }

  </div>

}
else
{



  <div class="row justify-content-center align-content-center" style="height: 100%; width: 100%; position: absolute;">
    <h1>Carregando</h1>
  </div>
}

