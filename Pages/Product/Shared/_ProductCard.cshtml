@*@page*@ 
@model LojaVirtual._ProductCardModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="col-lg-4 col-md-6  py-3 px-0" >
    <div class="container">
        <div class="card-deck flex-row ">
            <div class="card h-100">

                <a asp-page="/Product/ProductDetail" asp-page-handler="Get" asp-route-id="@Model.Product.ProductId"    class="flex-row" style="color:#000000; text-decoration:none" >

                    <!-- #region Image -->
                    <img width="700" height="200" class="card-img-top" src="http://placehold.it/700x400" alt="">
                    <!-- #endregion -->

                    <!-- #region Properties -->

                    <div class="card-body ">
                        <h4 class="card-title ">@Model.Product.Name </h4>
                        <p class="card-text nounderline">@Model.Product.Description</p>
                        <h5>R$ @Model.Product.Price </h5>

                    </div>

                    <!-- #endregion -->
                </a>

                <!-- #region Controls -->

                <div class="d-flex justify-content-center">
                    @*<a asp-page-handler="AddShoppingCartItem" asp-route-product="@Model.Product" class="btn btn-info mb-1 btn-block">Adicionar ao Carrinho</a>*@

                    <form class="form-inline" method="post">

                        <div class="form-group col-auto">
                            <button  asp-page-handler="AddShoppingCartItem" asp-route-product="@Model.Product" type="submit" class="btn btn-info mb-1 btn-block">Adicionar ao Carrinho</button>
                        </div>

                        <div class="form-group col-auto">
                            <button type="submit" asp-page-handler="AddShoppingCartItem" asp-route-product="@Model.Product" class="btn btn-danger mb-1 btn-block">Adicionar aos Favoritos</button>
                        </div>

                    </form>
                </div>

                <!-- #endregion -->

                <!-- #region Classification -->
                @* todo: classification of the products
        <div class="card-footer">
            <small class="text-muted">★ ★ ★ ★ ☆</small>
        </div>
                *@
                <!-- #endregion -->

            </div>
        </div>
    </div>
</div>


