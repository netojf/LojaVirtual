@if (CurrentItems?.Count > 0)
  {
  <div class="row">
    @for (int i = 0; i < CurrentItems.Count; i++)
    {
      var product = CurrentItems[i];

      if (product != null)
      {
        @try
        {
          <ProductCard @bind-Product="@product"></ProductCard>
        }
        catch (Exception ex)
        {

          throw ex;
        }

      }
    }
  </div>
  }
else
{
  <div class="row justify-content-center align-content-center w-100 h-100" style="">
    <h1>@Message</h1>
  </div>
}
